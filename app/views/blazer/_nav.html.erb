<div class="btn-group" style="vertical-align: top; margin-right: 5px;">
  <%= link_to "Home", root_path, class: "btn btn-primary" %>
  <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split"
          data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="visually-hidden">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Checks", checks_path, class: 'dropdown-item' %></li>
    <% if Blazer.uploads? %>
      <li><%= link_to "Uploads", uploads_path, class: 'dropdown-item' %></li>
    <% end %>
    <li><hr class="dropdown-divider"></li>
    <li><%= link_to "New Query", new_query_path, class: 'dropdown-item' %></li>
    <li><%= link_to "New Dashboard", new_dashboard_path, class: 'dropdown-item' %></li>
    <% check_params = @query ? {query_id: @query.id} : {} %>
    <li><%= link_to "New Check", new_check_path(check_params), class: 'dropdown-item' %></li>
  </ul>
</div>
